
{{> header }}

<h1>{{t "feeds.title"}}</h1>

<p class="lead">{{t "feeds.subtitle"}}</p>

{{> show_flash_messages }}

<div class="row">

  <div class="col-md-6">

    <div class="row">&nbsp;</div>

    <div class="row">
      <div class="col-md-12">

        <p class="description-paragraph">{{t "feeds.description"}}</p>

        <p class="description-paragraph">{{t "feeds.streamsFrom"}}</p>
        <p class="description-paragraph">
          <a href="/calendar/">{{t "feeds.myCalendar"}}</a> {{t "feeds.myCalendarDescription"}}
        </p>
        {{# unless keep_team_view_hidden}}
        <p class="description-paragraph">
          <a href="/calendar/teamview/">{{t "feeds.teamView"}}</a> {{t "feeds.teamViewDescription"}}
        </p>
        {{/ unless}}

        <p class="description-paragraph">{{t "feeds.exportHint"}}</p>

        <p class="description-paragraph">{{t "feeds.copyHint"}}</p>

      </div>
    </div>

    <div class="row feeds-holder">

      <div class="col-md-5 well">
        <form method="POST" action="/calendar/feeds/regenerate/">
        <a href="webcal://{{current_host}}/feed/{{calendar_feed.feed_token}}/ical.ics">{{t "feeds.myCalendarFeed"}} <i class="fa fa-rss"></i></a>

        <input type="hidden" name="token" value="{{calendar_feed.feed_token}}"/>
        <button type="submit" class="close" aria-label="Close"><span aria-hidden="true"><i class="fa fa-trash"></i></span></button>
        </form>
      </div>

      {{# unless keep_team_view_hidden }}
      <div class="col-md-5 col-md-offset-2 well">
        <form method="POST" action="/calendar/feeds/regenerate/">
        <a href="webcal://{{current_host}}/feed/{{team_view_feed.feed_token}}/ical.ics">{{t "feeds.teamViewFeed"}} <i class="fa fa-rss"></i></a>

        <input type="hidden" name="token" value="{{team_view_feed.feed_token}}"/>
        <button type="submit" class="close" aria-label="Close"><span aria-hidden="true"><i class="fa fa-trash"></i></span></button>
        </form>
      </div>
      {{/ unless }}

    </div>
  </div>


  <div class="col-md-6">
    <div class="row feed-calendar-big-picture-holder">
      <i class="fa fa-calendar feed-calendar-big"></i>
    </div>
  </div>



</div>

{{> footer }}
