{{t "emails.forgotPassword.subject"}}
=====
{{# with user ~}}
<p>{{t "emails.greeting" name=this.name}}</p>

<p>{{t "emails.forgotPassword.body"}} {{> email/link href=(get_application_domain) text=(t "brand.name") }}</p>

{{# if company.ldap_auth_enabled }}
<p>{{t "emails.forgotPassword.ldapNotice"}}</p>

<p>{{t "emails.forgotPassword.ldapContact"}}</p>

{{ else }}
<p>
  {{t "emails.forgotPassword.followLink"}}

  {{> email/link href=(concatenate (get_application_domain) '/reset-password/?t=' (this.get_reset_password_token)) text=(t "emails.forgotPassword.action") }}
</p>

<p>
  {{t "emails.forgotPassword.manualLink"}} <pre>{{ concatenate (get_application_domain) '/reset-password/?t=' (this.get_reset_password_token) }}</pre>
</p>
{{/if}}

{{~/ with}}

<p>{{t "emails.thanks"}}</p>
