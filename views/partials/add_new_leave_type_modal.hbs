


<div class="modal fade" id="{{container_id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
    <form id="leave_type_new_form" method="POST" action="{{form_action}}">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="{{t 'common.close'}}"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">{{t "leaveTypeModal.title"}}</h4>
      </div>

      <div class="modal-body">

        <div class="form-group">
          <label for="leave_type_name_new" class="control-label">{{t "common.name"}}:</label>
          <input type="text" class="form-control" id="leave_type_name_new" name="name__new" required>
        </div>

        <div class="form-group">
          <input type="checkbox" id="leave_type_use_allovance_new" name="use_allowance__new">&nbsp;
          <label for="leave_type_use_allovance_new" class="control-label">{{t "generalSettings.leaveTypeUseAllowance"}}</label>
          <p><em>{{t "leaveTypeModal.useAllowanceHelp"}}</em></p>
        </div>

        <div class="form-group">
          <input type="checkbox" id="leave_type_auto_approve_new" name="auto_approve__new">&nbsp;
          <label for="leave_type_auto_approve_new" class="control-label">{{t "generalSettings.leaveTypeAutoApprove"}}</label>
          <p><em>{{t "leaveTypeModal.autoApproveHelp"}}</em></p>
        </div>

        <div class="form-group">
          <div class="dropdown" data-tom-color-picker="1">
            <input type="hidden" name="color__new" value="leave_type_color_1">
            <button type="button" class="btn btn-default dropdown-toggle leave_type_color_1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-paint-brush"></i> {{t "leaveTypeModal.pickColor"}}</button>
            <ul class="dropdown-menu">
              {{> options_for_color_picker}}
            </ul>
          </div>
          <p><em>{{t "leaveTypeModal.pickColorHelp"}}</em></p>
        </div>



        <div class="form-group">
          <label for="leave_type_limit_new" class="control-label">{{t "generalSettings.leaveTypeLimitLabel"}}:</label>
          <input type="number" class="form-control" id="leave_type_limit_new" name="limit__new">
          <p><em>{{t "leaveTypeModal.limitHelp"}}</em></p>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-link" data-dismiss="modal">{{t "common.cancel"}}</button>
        <button type="submit" class="btn btn-success single-click">{{t "common.create"}}</button>
      </div>
    </form>
    </div>
  </div>
</div>

