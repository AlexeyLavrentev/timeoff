
<div class="modal fade" id="{{container_id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
    <form method="POST" action="/settings//company/delete/" id="remove_company_form">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="{{t 'common.close'}}"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">{{t "generalSettings.removeCompanyTitle"}}</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="remove_company_name_confirmation" class="control-label">{{t "generalSettings.removeCompanyNameLabel"}}:</label>
          <input type="text" class="form-control" id="remove_company_name_confirmation" name="confirm_name" required>
          <p><em>{{t "generalSettings.removeCompanyNameHelp"}}</em></p>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-link" data-dismiss="modal">{{t "common.cancel"}}</button>
        <button type="submit" class="btn btn-danger single-click">{{t "generalSettings.removeCompanyButton"}}</button>
      </div>
    </form>
    </div>
  </div>
</div>
