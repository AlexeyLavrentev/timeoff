
{{> header }}

<h1>{{t "usersImport.title"}}</h1>

<div class="row">
  <div class="col-md-6 lead">{{t "usersImport.subtitle"}}</div>
  <div class="col-md-6">
    <a class="btn btn-default pull-right" href="/users/add/" id="add_new_department">{{t "users.addSingleEmployee"}} <i class="fa fa-chevron-right"></i></a>
  </div>

</div>

{{> show_flash_messages }}

<div class="row">
  <div class="col-md-6">
    <ol class="breadcrumb">
      <li><a href="/users/">{{t "users.allEmployees"}}</a></li>
      <li class="active">{{t "usersImport.breadcrumbCurrent"}}</li>
    </ol>
  </div>
</div>

<div class="row main-row_header">
  <p class="col-md-12">{{t "usersImport.stepsTitle"}}</p>
</div>

<div class="row">
  <div class="col-md-9 col-md-offset-1">

    <form class="form-horizontal" method="POST" action="/users/import-sample/" id="users_import_sample_form">
      <p class="text-bigger">
        <strong>1.</strong> {{t "usersImport.stepOneText"}}
        <button
          type  = "submit"
          id    = "users_import_sample_btn"
          class = "btn btn-success"
          data-content   = "{{t "usersImport.sampleHelp"}}"
          data-placement = "top"
          data-toggle    = "popover"
          data-trigger   = "focus hover"
        ><i class="fa fa-download"></i> {{t "usersImport.downloadSampleButton"}}</button>
      </p>
    </form>

    <p class="text-bigger">
      <strong>2.</strong> {{t "usersImport.stepTwoText"}}
    </p>

    <p class="text-bigger">
      <strong>3.</strong> {{t "usersImport.stepThreeText"}}

      <form action="/users/import/" method="post" role="form" enctype="multipart/form-data" class="panel-body">
        <div class="form-group">
          <input id="users_input_inp" type="file" name="users_import">
        </div>
        <div class="form-group">
            <button class="btn btn-success single-click" id="submit_users_btn" type="submit"><i class="fa fa-upload"></i> {{t "users.importEmployees"}}</button>
        </div>
      </form>
    </p>
  </div>
</div>

<div class="row">&nbsp;</div>

{{> footer }}
